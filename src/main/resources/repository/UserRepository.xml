<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.enrich.user.UserRepository">

  <select id="findAll" resultType="com.enrich.user.UserEntity">
    SELECT * FROM user
  </select>

  <select id="findById" resultType="com.enrich.user.UserEntity">
    SELECT * FROM user WHERE id = #{userId}
  </select>

  <insert id="insert" parameterType="com.enrich.user.UserEntity">
    INSERT INTO user
    (username, password)
    VALUES(#{username}, #{password});
  </insert>

  <update id="update" parameterType="com.enrich.user.UserEntity">
    UPDATE user
    SET username = #{username}, password = #{password}
    WHERE id = #{userId}
  </update>

  <delete id="delete" parameterType="com.enrich.user.UserEntity">
    DELETE from user
    WHERE id IN
    <foreach item="id" collection="userIds" open="(" separator="," close=")">
      #{id}
    </foreach>
  </delete>

</mapper>